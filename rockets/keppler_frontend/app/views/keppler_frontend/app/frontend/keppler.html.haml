  %body
    %header
      / START NAVBAR
      %nav.navbar.navbar-expand-lg.navbar-light.container
        %a.navbar-brand{:href => "#"}
          %img.logo-navbar{:alt => "", :src => "assets/app/Logo Brisas BLANCO.png"}/
